<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"   >

    <gradient
        android:startColor="#dcf3e354"
        android:centerColor="#ffe66c"
        android:endColor="#ffdd55"
        android:angle="270"/>

    <stroke
        android:width="0dp"
        android:color="#C4CDE0" >
    </stroke>

    <padding
        android:left="5dp"
        android:top="50dp"
        android:right="5dp"
        android:bottom="5dp"    >
    </padding>

    <corners
        android:topLeftRadius="15dp"
        android:topRightRadius="15dp"
        android:bottomLeftRadius="0dp"
        android:bottomRightRadius="0dp"></corners>

</shape>