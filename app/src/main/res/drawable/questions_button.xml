<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_enabled="false"
        android:drawable="@drawable/disabled_question_button" />
    <item
        android:state_pressed="true"
        android:state_enabled="true"
        android:drawable="@drawable/pressed_question_button" />
    <item
        android:state_focused="true"
        android:state_enabled="true"
        android:drawable="@drawable/focused_question_button" />
    <item
        android:state_enabled="true"
        android:drawable="@drawable/enabled_question_button" />
</selector>